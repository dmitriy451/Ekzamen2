<Page x:Class="Sharm.Pages.TodayOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sharm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TodayOrder">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="DGrid_Orders" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Должноть" Binding="{Binding Position.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Записи" Binding="{Binding SumOrder}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1" Margin="20" HorizontalAlignment="Left" Width="100">Заявки</Button>
        <Button Grid.Row="1" Margin="20" HorizontalAlignment="Right" Width="100" Click="Button_Click">xПосмотреть</Button>
    </Grid>
</Page>
